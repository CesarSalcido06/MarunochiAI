# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_MAX_RAM=20GB
OLLAMA_KEEP_ALIVE=30m

# MarunochiAI Configuration
MARUNOCHITHE_PORT=8765
MARUNOCHITHE_HOST=0.0.0.0
MARUNOCHITHE_LOG_LEVEL=INFO
MARUNOCHITHE_LOG_FILE=~/MarunochiAI/data/logs/marunochithe.log

# Model Configuration
MARUNOCHITHE_DEFAULT_MODEL=qwen2.5-coder:7b
MARUNOCHITHE_ENABLE_CUSTOM=true

# BenchAI Integration (optional)
BENCHAI_URL=http://192.168.0.213:8085
BENCHAI_API_KEY=
BENCHAI_AGENT_ID=marunochithe-m4pro
BENCHAI_HEARTBEAT_INTERVAL=30

# Fine-Tuning Configuration
MARUNOCHITHE_TRAINING_ENABLED=true
MARUNOCHITHE_TRAINING_THRESHOLD=500
MARUNOCHITHE_TRAINING_SCHEDULE=weekly

# ChromaDB Configuration
CHROMA_PATH=~/MarunochiAI/data/chroma
CHROMA_COLLECTION_NAME=codebase

# Development
DEBUG=false
RELOAD=false
